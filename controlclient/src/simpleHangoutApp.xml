<body>

<script src="https://hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0" ></script>
<script src="https:///ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>

<h3>Simple Hangout App</h3>

<p>
<table>
<tr><td/><td><input class="button" type="button" value="forward" id="vistorveForward" onClick="vistorveForward()"></td><td/>
<tr><td><input class="button" type="button" value="left" id="vistorveLeft" onClick="vistorveLeft()"></td><td/><td><input class="button" type="button" value="right" id="vistorveRight" onClick="vistorveRight()"><td/>
</table>

<input class="button" type="button" value="Show participants!" id="showParticipants" 
    onClick="showParticipants()"/>

<div id="participantsDiv"></div>

<input class="button" type="button" value="Show Hangout URL!" id="showHangoutUrl" 
    onClick="showHangoutUrl()"/>
</p>

<div id="hangoutSuccessDiv"></div>

<hr>

<p><a href="http://developers.google.com/+/hangouts/getting-started">Read the docs</a> to learn more about developing hangouts!</a></p>

<script>
//var socket = new WebSocket("ws://172.29.208.44:9435/control");

function vistorveForward() {
  socket.send("VISTORVE.FORWARD");
}

function vistorveLeft() {
  socket.send("VISTORVE.LEFT");
}

function vistorveRight() {
  socket.send("VISTORVE.RIGHT");
}

function showParticipants() {
  document.getElementById('participantsDiv').innerHTML = "starting showHangoutUrl";
  var beginControlUrl = gadgets.views.getParams()['appData'];
  document.getElementById('participantsDiv').innerHTML = beginControlUrl;
  var participants = gapi.hangout.getParticipants();

  var retVal = '<p>Participants: </p><ul>';

  for (var index in participants) {
    var participant = participants[index];

    if (!participant.person) {
      retVal += '<li>A participant not running this app</li>';
    }
    retVal += '<li>' + participant.person.displayName + '</li>';
  }

  retVal += '</ul>';

  var div = document.getElementById('participantsDiv');

  div.innerHTML = retVal;
}

function showHangoutUrl() {
  document.getElementById('participantsDiv').innerHTML = "starting showHangoutUrl";
  var hangoutUrl = gapi.hangout.getHangoutUrl(), beginControlUrl = gadgets.views.getParams()['appData'];

  document.getElementById('participantsDiv').innerHTML = beginControlUrl;

  jQuery.getJSON(beginControlUrl,
                 {hangout_url: hangoutUrl},
                 function(data) {
                   jQuery('#hangoutSuccessDiv').text('hanging out: ' + data.message);
                 });
}

function init() {
  // When API is ready...                                                         
  document.getElementById('participantsDiv').innerHTML = "calling onApiReady.add";
  gapi.hangout.onApiReady.add(
      function(eventObj) {
        if (eventObj.isApiReady) {
          showHangoutUrl();
        }
      });
}

// Wait for gadget to load.                                                       
gadgets.util.registerOnLoadHandler(init);
</script>
</body>
]]>
